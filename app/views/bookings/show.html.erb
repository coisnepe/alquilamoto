  <div class="row text-center">

    <ul class="clean-list list-unstyled">
      <li>
        <div class="title">Rental starts on :</div>
        <div class="content"><strong><%= @booking.date_begin %></strong></div>
      </li>

      <li>
        <div class="title">Rental ends on :</div>
        <div class="content"><strong><%= @booking.date_end %></strong></div>
      </li>

      <li>
        <div class="title">Total price for your rental :</div>
